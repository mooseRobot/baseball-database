    {{!-- Create a table --}}
    <table id="teams-table">

        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>Delete</th>
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
            {{#each data}}
            <tr>
                <tr data-value={{this.teamname}}></tr>
                <td>{{this.teamname}}</td>
                <td>{{this.location}}</td>
                <td>{{this.gameswon}}</td>
                <td>{{this.gameslost}}</td>
                <td><button onclick="deleteTeam('{{this.teamname}}')">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>




    {{!-- Form to add a record to the table  --}}
    <h2>Adding Data with AJAX</h2>
